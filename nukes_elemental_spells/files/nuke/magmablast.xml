<Entity name="$projectile_default">

	<Base file="data/entities/base_projectile.xml" >

		<VelocityComponent
		  air_friction="0"
		  gravity_y="1"
		  mass="0.08"
			>
		</VelocityComponent>

	</Base>

  <ProjectileComponent 
    _enabled="1" 
	speed_min="600"
    speed_max="600"
    on_collision_die="1"
    on_death_explode="1"
    on_death_gfx_leave_sprite="0"
    on_lifetime_out_explode="1"
    explosion_dont_damage_shooter="0"
	die_on_liquid_collision="0"
    lifetime="6"
    damage="0"
    shoot_light_flash_r="255"
    shoot_light_flash_g="140"
    shoot_light_flash_b="10"
    shoot_light_flash_radius="200"
    >
	<damage_by_type fire="0.4" >
    </damage_by_type>
	<config_explosion
      never_cache="0" 
      camera_shake="5.5" 
      explosion_radius="35"
      explosion_sprite="data/particles/explosion_064_poof.xml" 
	  load_this_entity="mods/nukes_elemental_spells/files/nuke/main_magma.xml"
      explosion_sprite_lifetime="0" 
      create_cell_probability="2.5" 
	  create_cell_material="lava" 
      hole_destroy_liquid="0"
      explosion_sprite_emissive="1"
      explosion_sprite_additive="1"
      ray_energy="55000"
	  hole_enabled="1" 
      hole_image="data/temp/explosion_hole.png" 
      damage="4"
      particle_effect="0"
      damage_mortals="1"
      physics_explosion_power.min="3.2" 
      physics_explosion_power.max="3.8"
      physics_throw_enabled="1"
      shake_vegetation="1" 
      sparks_count_min="150" 
      sparks_count_max="180" 
      sparks_enabled="1" 
	  spark_material="lava"
      stains_enabled="1"
      stains_radius="12"
      >
    </config_explosion>
  </ProjectileComponent>
  
  <ParticleEmitterComponent 
    emitted_material_name="lava"
    count_min="1"
    count_max="3"
    offset.x="0"
    offset.y="0"
	gravity.y="-100"
    x_pos_offset_min="-4"
    y_pos_offset_min="-4"
    x_pos_offset_max="4"
    y_pos_offset_max="4"
    x_vel_min="-5000"
    x_vel_max="5000"
    y_vel_min="-5000"
    y_vel_max="5000"
    lifetime_min="2.5"
    lifetime_max="4.5"
    create_real_particles="1"
    emit_cosmetic_particles="0"
    emission_interval_min_frames="1"
    emission_interval_max_frames="1"
    is_emitting="1" >
  </ParticleEmitterComponent>
  
  <ParticleEmitterComponent 
    emitted_material_name="fire"
    offset.x="-4"
    offset.y="0"
	gravity.y="-100"
    x_pos_offset_min="-1"
    y_pos_offset_min="-3"
    x_pos_offset_max="1"
    y_pos_offset_max="3"
    x_vel_min="-10"
    x_vel_max="10"
    y_vel_min="-1"
    y_vel_max="1"
    count_min="1"
    count_max="1"
    lifetime_min="0.5"
    lifetime_max="2.5"
	is_trail="1"
	trail_gap="2"
    create_real_particles="1"
    emit_cosmetic_particles="0"
    emission_interval_min_frames="1"
    emission_interval_max_frames="8"
    is_emitting="1" >
  </ParticleEmitterComponent>
  
  <HitboxComponent 
    _enabled="1" 
    aabb_min_x="-5" 
    aabb_max_x="5" 
    aabb_min_y="-5" 
    aabb_max_y="5" >
  </HitboxComponent>
  
  <SpriteComponent 
    _enabled="1" 
    alpha="1" 
    image_file="mods/nukes_elemental_spells/files/nuke/fireball.xml" 
    next_rect_animation="" 
    offset_x="16" 
    offset_y="12" 
    rect_animation=""
	additive="1"
     >
  </SpriteComponent>

  <AudioComponent
      file="data/audio/Desktop/projectiles.snd"
      event_root="player_projectiles/bullet_fire_heavy">
  </AudioComponent>

</Entity>
